JS


let player1Time = 0;
let player2Time = 0;
let player1Interval;
let player2Interval;

document.getElementById("player1-start").addEventListener("click", startPlayer1Timer);
document.getElementById("player1-stop").addEventListener("click", stopPlayer1Timer);
document.getElementById("player1-reset").addEventListener("click", resetPlayer1Timer);

document.getElementById("player2-start").addEventListener("click", startPlayer2Timer);
document.getElementById("player2-stop").addEventListener("click", stopPlayer2Timer);
document.getElementById("player2-reset").addEventListener("click", resetPlayer2Timer);

function startPlayer1Timer() {
	player1Interval = setInterval(() => {
		player1Time++;
		document.getElementById("player1-time").innerText = formatTime(player1Time);
	}, 1000);
}

function stopPlayer1Timer() {
	clearInterval(player1Interval);
}

function resetPlayer1Timer() {
	player1Time = 0;
	document.getElementById("player1-time").innerText = "00:00:00";
}

function startPlayer2Timer() {
	player2Interval = setInterval(() => {
		player2Time++;
		document.getElementById("player2-time").innerText = formatTime(player2Time);
	}, 1000);
}

function stopPlayer2Timer() {
	clearInterval(player2Interval);
}

function resetPlayer2Timer() {
	player2Time = 0;
	document.getElementById("player2-time").innerText = "00:00:00";
}

function formatTime(time) {
	let hours = Math.floor(time / 3600);
	let minutes = Math.floor((time % 3600) / 60);
	let seconds = time % 60;
	return `${pad(hours)}:${pad(minutes)}:${pad(seconds)}`;
}

function pad(number) {
	return (number < 10 ? "0" : "") + number;
}
